<!DOCTYPE html>
<html lang="th">
<%- include('layout/head') %>

    <body class="bg-slate-50 text-slate-800 antialiased min-h-screen flex flex-col">

        <!-- Navbar -->
        <%- include('layout/navbar', { activePage: 'manage_products' , user: locals.user }) %>

            <!-- Main Content -->
            <main class="flex-grow flex items-start sm:items-center justify-center p-4 sm:p-8">

                <div
                    class="bg-white rounded-2xl shadow-xl w-full max-w-6xl overflow-hidden border border-slate-100 flex flex-col max-h-[90vh]">

                    <div class="bg-slate-50 px-6 py-6 border-b border-slate-100 text-center shrink-0">
                        <div
                            class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-emerald-100 text-emerald-600 mb-4">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                            </svg>
                        </div>
                        <h1 class="text-2xl font-bold text-slate-800">จัดการสินค้า</h1>
                        <p class="text-sm text-slate-500 mt-1">เพิ่ม แก้ไข และลบรายการสินค้าในระบบ</p>
                    </div>

                    <div class="p-6 flex-grow overflow-y-auto" style="scrollbar-width: thin;">

                        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 gap-4">
                            <button id="btnCreateProduct"
                                class="flex items-center gap-1.5 bg-emerald-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-emerald-700 shadow-sm transition-all focus:outline-none">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 4v16m8-8H4"></path>
                                </svg>
                                เพิ่มสินค้าใหม่
                            </button>
                            <div class="relative w-full sm:w-auto">
                                <input type="text" id="productSearchInput" placeholder="ค้นหาสินค้า..."
                                    class="w-full sm:w-64 pl-9 pr-4 py-2 bg-white border border-slate-200 text-slate-800 rounded-lg text-sm shadow-sm focus:ring-2 focus:ring-emerald-500 outline-none">
                                <svg class="w-4 h-4 text-slate-400 absolute left-3 top-1/2 -translate-y-1/2 pointer-events-none"
                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                                </svg>
                            </div>
                        </div>

                        <div class="bg-white shadow-sm border border-slate-200 rounded-xl overflow-hidden">
                            <div
                                class="px-5 py-3 border-b border-slate-100 bg-slate-50 flex justify-between items-center">
                                <h2 class="text-sm font-semibold text-slate-700">รายการสินค้าทั้งหมด <span
                                        id="productCount" class="text-slate-500 font-normal ml-1"></span></h2>
                            </div>
                            <div class="overflow-x-auto">
                                <table class="w-full text-left border-collapse">
                                    <thead>
                                        <tr
                                            class="bg-slate-50 border-b border-slate-200 text-xs uppercase tracking-wider text-slate-500 font-semibold">
                                            <th class="px-4 py-4">ID</th>
                                            <th class="px-4 py-4">ชื่อสินค้า</th>
                                            <th class="px-4 py-4">หมวดหมู่</th>
                                            <th class="px-4 py-4 text-right">ราคา</th>
                                            <th class="px-4 py-4 text-right">อายุ (วัน)</th>
                                            <th class="px-4 py-4 text-center">จัดการ</th>
                                        </tr>
                                    </thead>
                                    <tbody id="productTableBody" class="divide-y divide-slate-100">
                                        <tr>
                                            <td colspan="6" class="px-4 py-6 text-center text-slate-500 text-sm">
                                                กำลังโหลด...</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="productPagination"
                            class="mt-4 flex flex-wrap items-center justify-between text-sm text-slate-500 gap-2"></div>
                    </div>
                </div>
            </main>

            <!-- Product Create/Edit Modal -->
            <div id="productModal"
                class="fixed inset-0 z-50 bg-slate-900/50 backdrop-blur-sm hidden flex items-center justify-center p-4">
                <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg overflow-hidden flex flex-col max-h-full">
                    <div
                        class="px-6 py-4 border-b border-slate-100 bg-slate-50 flex justify-between items-center shrink-0">
                        <h2 id="productModalTitle" class="text-lg font-semibold text-slate-800">เพิ่มสินค้าใหม่</h2>
                        <button onclick="closeProductModal()" class="text-slate-400 hover:text-rose-500">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>
                    </div>
                    <form id="productForm" class="p-6 space-y-4 overflow-y-auto" style="scrollbar-width: thin;">
                        <input type="hidden" id="editProductId">
                        <div class="grid grid-cols-2 gap-4">
                            <div class="col-span-2">
                                <label class="block text-sm font-medium text-slate-700 mb-1">ชื่อสินค้า <span
                                        class="text-rose-500">*</span></label>
                                <input type="text" id="productName" required placeholder="เช่น นมสด ตราเต็มไขมัน"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg shadow-sm focus:ring-2 focus:ring-emerald-500 outline-none text-sm"
                                    autocomplete="off">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-1">หมวดหมู่ <span
                                        class="text-rose-500">*</span></label>
                                <select id="productCategory" required
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg shadow-sm focus:ring-2 focus:ring-emerald-500 outline-none text-sm bg-white">
                                    <option value="">เลือกหมวดหมู่...</option>
                                    <option value="เนื้อสัตว์">เนื้อสัตว์</option>
                                    <option value="ผัก">ผัก</option>
                                    <option value="ผลไม้">ผลไม้</option>
                                    <option value="นม/ไข่">นม/ไข่</option>
                                    <option value="อาหารทะเล">อาหารทะเล</option>
                                    <option value="เครื่องดื่ม">เครื่องดื่ม</option>
                                    <option value="อื่นๆ">อื่นๆ</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-1">ราคา (บาท)</label>
                                <input type="number" id="productPrice" min="0" step="0.01" placeholder="0.00"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg shadow-sm focus:ring-2 focus:ring-emerald-500 outline-none text-sm">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-1">อายุการเก็บรักษา (วัน)
                                    <span class="text-rose-500">*</span></label>
                                <input type="number" id="productShelfLife" min="1" required placeholder="7"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg shadow-sm focus:ring-2 focus:ring-emerald-500 outline-none text-sm">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-1">URL รูปภาพ</label>
                                <input type="text" id="productImageUrl" placeholder="https://..."
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg shadow-sm focus:ring-2 focus:ring-emerald-500 outline-none text-sm">
                            </div>
                        </div>
                        <div class="pt-4 flex justify-end space-x-3 border-t border-slate-100">
                            <button type="button" onclick="closeProductModal()"
                                class="px-4 py-2 border border-slate-300 rounded-lg text-sm font-medium text-slate-700 hover:bg-slate-100">ยกเลิก</button>
                            <button type="submit"
                                class="px-4 py-2 bg-emerald-600 rounded-lg text-sm font-medium text-white hover:bg-emerald-700 shadow-sm">บันทึก</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Scripts -->
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script>
                // --- Product Management Logic ---
                let allProducts = [];
                let productPage = 1;
                const PRODUCT_PAGE_SIZE = 50;

                function loadProducts() {
                    const tbody = document.getElementById('productTableBody');
                    fetch('/api/admin/products').then(r => r.json()).then(products => {
                        allProducts = products;
                        productPage = 1;
                        renderProductTable();
                    }).catch(() => {
                        tbody.innerHTML = '<tr><td colspan="6" class="px-4 py-6 text-center text-rose-500">โหลดข้อมูลล้มเหลว</td></tr>';
                    });
                }

                function renderProductTable() {
                    const query = (document.getElementById('productSearchInput')?.value || '').toLowerCase().trim();
                    const filtered = query
                        ? allProducts.filter(p =>
                            p.product_name.toLowerCase().includes(query) ||
                            (p.category_name || '').toLowerCase().includes(query))
                        : allProducts;

                    const total = filtered.length;
                    const totalPages = Math.max(1, Math.ceil(total / PRODUCT_PAGE_SIZE));
                    if (productPage > totalPages) productPage = totalPages;

                    const start = (productPage - 1) * PRODUCT_PAGE_SIZE;
                    const pageItems = filtered.slice(start, start + PRODUCT_PAGE_SIZE);

                    document.getElementById('productCount').textContent =
                        query ? `(พบ ${total} / ${allProducts.length})` : `(${total} รายการ)`;

                    const tbody = document.getElementById('productTableBody');
                    if (!pageItems.length) {
                        tbody.innerHTML = '<tr><td colspan="6" class="px-4 py-6 text-center text-slate-400">ไม่พบสินค้าที่ตรงกับคำค้นหา</td></tr>';
                    } else {
                        tbody.innerHTML = pageItems.map(p => {
                            const encName = p.product_name.replace(/&/g, '&amp;').replace(/"/g, '&quot;');
                            const encImg = (p.image_url || '').replace(/&/g, '&amp;').replace(/"/g, '&quot;');
                            const encCat = (p.category_name || '').replace(/&/g, '&amp;').replace(/"/g, '&quot;');
                            const thumb = p.image_url
                                ? `<img src="${encImg}" class="w-9 h-9 rounded-lg object-cover border border-slate-100 bg-slate-50" onerror="this.style.display='none'">`
                                : `<div class="w-9 h-9 rounded-lg bg-slate-100 flex items-center justify-center text-slate-300"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg></div>`;
                            return `<tr class="hover:bg-slate-50 transition-colors"
                                        data-pid="${p.id}" data-name="${encName}" data-price="${p.price}"
                                        data-img="${encImg}" data-cat="${encCat}" data-shelf="${p.shelf_life_days}">
                                <td class="px-4 py-3 text-sm text-slate-400 font-mono">${p.id}</td>
                                <td class="px-4 py-3">
                                    <div class="flex items-center gap-3">${thumb}
                                        <span class="font-medium text-slate-800 text-sm">${p.product_name}</span>
                                    </div>
                                </td>
                                <td class="px-4 py-3 text-sm text-slate-500">${p.category_name || '—'}</td>
                                <td class="px-4 py-3 text-sm text-right font-mono">${p.price > 0 ? Number(p.price).toFixed(2) : '—'}</td>
                                <td class="px-4 py-3 text-sm text-right font-mono">${p.shelf_life_days}</td>
                                <td class="px-4 py-3 text-center">
                                    <div class="flex items-center justify-center gap-1">
                                        <button data-action="edit-product" class="text-blue-500 hover:bg-blue-50 p-2 rounded-lg transition-colors" title="แก้ไข">
                                            <svg class="w-4 h-4 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                        </button>
                                        <button data-action="delete-product" class="text-rose-500 hover:bg-rose-50 p-2 rounded-lg transition-colors" title="ลบ">
                                            <svg class="w-4 h-4 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                        </button>
                                    </div>
                                </td>
                            </tr>`;
                        }).join('');
                    }

                    // Render pagination
                    const pg = document.getElementById('productPagination');
                    if (totalPages <= 1) { pg.innerHTML = ''; return; }
                    const prevDis = productPage === 1 ? 'opacity-40 cursor-not-allowed pointer-events-none' : 'hover:bg-slate-100';
                    const nextDis = productPage === totalPages ? 'opacity-40 cursor-not-allowed pointer-events-none' : 'hover:bg-slate-100';
                    pg.innerHTML = `
                        <span>แสดง ${start + 1}–${Math.min(start + PRODUCT_PAGE_SIZE, total)} จาก ${total} รายการ</span>
                        <div class="flex gap-1">
                            <button id="productPrevBtn" class="px-3 py-1.5 rounded-lg border border-slate-200 text-sm ${prevDis}">ก่อนหน้า</button>
                            <span class="px-3 py-1.5 text-sm font-semibold text-emerald-700">${productPage} / ${totalPages}</span>
                            <button id="productNextBtn" class="px-3 py-1.5 rounded-lg border border-slate-200 text-sm ${nextDis}">ถัดไป</button>
                        </div>`;

                    document.getElementById('productPrevBtn')?.addEventListener('click', () => { productPage--; renderProductTable(); });
                    document.getElementById('productNextBtn')?.addEventListener('click', () => { productPage++; renderProductTable(); });
                }

                document.getElementById('productSearchInput').addEventListener('input', () => {
                    productPage = 1;
                    renderProductTable();
                });

                document.getElementById('productTableBody').addEventListener('click', (e) => {
                    const btn = e.target.closest('[data-action]');
                    if (!btn) return;
                    const row = btn.closest('tr');
                    const id = row.dataset.pid;
                    const name = row.dataset.name;
                    const price = row.dataset.price;
                    const imgUrl = row.dataset.img;
                    const category = row.dataset.cat;
                    const shelfLife = row.dataset.shelf;
                    if (btn.dataset.action === 'edit-product') {
                        openEditProduct(id, name, price, imgUrl, category, shelfLife);
                    } else if (btn.dataset.action === 'delete-product') {
                        deleteProduct(id, name);
                    }
                });

                function closeProductModal() {
                    document.getElementById('productModal').classList.add('hidden');
                    document.getElementById('productForm').reset();
                    document.getElementById('editProductId').value = '';
                }

                document.getElementById('btnCreateProduct').addEventListener('click', () => {
                    document.getElementById('productModalTitle').textContent = 'เพิ่มสินค้าใหม่';
                    document.getElementById('productForm').reset();
                    document.getElementById('editProductId').value = '';
                    document.getElementById('productShelfLife').value = 7;
                    document.getElementById('productModal').classList.remove('hidden');
                });

                window.openEditProduct = (id, name, price, imgUrl, category, shelfLife) => {
                    document.getElementById('productModalTitle').textContent = 'แก้ไขสินค้า';
                    document.getElementById('editProductId').value = id;
                    document.getElementById('productName').value = name;
                    document.getElementById('productPrice').value = price || '';
                    document.getElementById('productImageUrl').value = imgUrl || '';
                    document.getElementById('productCategory').value = category || '';
                    document.getElementById('productShelfLife').value = shelfLife || 7;
                    document.getElementById('productModal').classList.remove('hidden');
                };

                document.getElementById('productForm').addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const id = document.getElementById('editProductId').value;
                    const isEdit = !!id;
                    const payload = {
                        product_name: document.getElementById('productName').value.trim(),
                        price: document.getElementById('productPrice').value,
                        image_url: document.getElementById('productImageUrl').value.trim(),
                        category_name: document.getElementById('productCategory').value.trim(),
                        shelf_life_days: document.getElementById('productShelfLife').value
                    };
                    try {
                        const res = await fetch(isEdit ? `/api/admin/products/${id}` : '/api/admin/products', {
                            method: isEdit ? 'PUT' : 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });
                        const result = await res.json();
                        if (res.ok) {
                            Swal.fire('สำเร็จ!', isEdit ? 'แก้ไขสินค้าเรียบร้อย' : 'เพิ่มสินค้าใหม่เรียบร้อย', 'success');
                            closeProductModal();
                            loadProducts();
                        } else {
                            Swal.fire('ล้มเหลว', result.error, 'error');
                        }
                    } catch { Swal.fire('ข้อผิดพลาด', 'ระบบขัดข้อง', 'error'); }
                });

                window.deleteProduct = async (id, name) => {
                    const conf = await Swal.fire({
                        title: `ลบสินค้า?`,
                        text: `"${name}" จะถูกลบพร้อมสต็อกและประวัติทั้งหมด`,
                        icon: 'warning', showCancelButton: true,
                        confirmButtonColor: '#ef4444', cancelButtonColor: '#64748b',
                        confirmButtonText: 'ลบ', cancelButtonText: 'ยกเลิก'
                    });
                    if (!conf.isConfirmed) return;
                    const res = await fetch(`/api/admin/products/${id}`, { method: 'DELETE' });
                    if (res.ok) { loadProducts(); Swal.fire('ลบสำเร็จ!', '', 'success'); }
                    else { const d = await res.json(); Swal.fire('ลบล้มเหลว', d.error, 'error'); }
                };

                document.addEventListener('DOMContentLoaded', loadProducts);
            </script>
    </body>

</html>