                        // Charts
                        function makeChart(canvasId, emptyId, labels, values, color) {
                            if (!values.length) {
                                document.getElementById(emptyId).classList.remove('hidden');
                                document.getElementById(canvasId).classList.add('hidden');
                                return;
                            }
