            <!-- Chart.js CDN -->
            <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

            <script>
                const AUTH_USER = { username: "<%= locals.user ? locals.user.username : '' %>", role: "<%= locals.user ? locals.user.role : '' %>" };

                // --- Tab Switching ---
                const tabs = document.querySelectorAll('.admin-tab');
                const panels = document.querySelectorAll('.tab-panel');
                tabs.forEach(tab => {
                    tab.addEventListener('click', () => {
                        tabs.forEach(t => {
                            t.classList.remove('active-tab', 'text-emerald-700', 'border-emerald-600', 'font-semibold');
                            t.classList.add('text-slate-500', 'border-transparent', 'font-medium');
                        });
                        panels.forEach(p => p.classList.add('hidden'));
                        tab.classList.add('active-tab', 'text-emerald-700', 'border-emerald-600', 'font-semibold');
                        tab.classList.remove('text-slate-500', 'border-transparent', 'font-medium');
                        document.getElementById(`tab-${tab.dataset.tab}`).classList.remove('hidden');
                    });
                });

                // --- Load Stats & Charts ---
                async function loadStats() {
                    try {
                        const [statsRes, historyRes] = await Promise.all([
                            fetch('/api/admin/dashboard-stats'),
                            fetch('/api/history')
                        ]);
                        const stats = await statsRes.json();
                        const history = await historyRes.json();

                        // Summary cards
                        document.getElementById('statTotalProducts').textContent = (stats.totalProducts ?? '—').toLocaleString();
                        document.getElementById('statTotalStock').textContent = (stats.totalStock ?? '—').toLocaleString();
                        document.getElementById('statTotalTx').textContent = (stats.totalTx ?? '—').toLocaleString();

                        // Charts
                        function makeChart(canvasId, emptyId, labels, values, color) {
                            if (!values.length) {
                                document.getElementById(emptyId).classList.remove('hidden');
                                document.getElementById(canvasId).classList.add('hidden');
                                return;
                            }
                            new Chart(document.getElementById(canvasId), {
                                type: 'bar',
                                data: {
                                    labels,
                                    datasets: [{ data: values, backgroundColor: color, borderRadius: 6, barThickness: 28 }]
                                },
                                options: {
                                    responsive: true, maintainAspectRatio: false,
                                    plugins: { legend: { display: false } },
                                    scales: {
                                        x: { grid: { display: false }, ticks: { font: { size: 11 }, maxRotation: 30 } },
                                        y: { beginAtZero: true, grid: { color: '#f1f5f9' }, ticks: { font: { size: 11 } } }
                                    }
                                }
                            });
                        }

                        makeChart('chartTop5', 'chartTop5Empty',
                            stats.top5.map(i => i.product_name.substring(0, 12) + (i.product_name.length > 12 ? '…' : '')),
                            stats.top5.map(i => i.total_sold),
                            'rgba(16, 185, 129, 0.7)'
                        );

                        makeChart('chartWorst5', 'chartWorst5Empty',
                            stats.worst5.map(i => i.product_name.substring(0, 12) + (i.product_name.length > 12 ? '…' : '')),
                            stats.worst5.map(i => i.total_sold),
                            'rgba(239, 68, 68, 0.7)'
                        );

                        // Recent Activity
                        const tbody = document.getElementById('recentActivity');
                        const recent = history.slice(0, 10);
                        if (recent.length === 0) {
                            tbody.innerHTML = '<tr><td colspan="5" class="px-6 py-6 text-center text-slate-400">ยังไม่มีรายการ</td></tr>';
                        } else {
                            tbody.innerHTML = recent.map(log => {
                                const isAdd = log.action_type === 'ADD';
                                const d = new Date(log.action_date);
                                const dt = d.toLocaleString('th-TH', { day: '2-digit', month: 'short', hour: '2-digit', minute: '2-digit' });
                                const badge = isAdd
                                    ? '<span class="px-2 py-0.5 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-700">รับเข้า</span>'
                                    : '<span class="px-2 py-0.5 rounded-full text-xs font-semibold bg-rose-100 text-rose-700">เบิกออก</span>';
                                return `<tr class="hover:bg-slate-50">
                            <td class="px-6 py-3 text-slate-400 text-xs whitespace-nowrap">${dt}</td>
                            <td class="px-6 py-3">${badge}</td>
                            <td class="px-6 py-3 text-slate-800 font-medium">${log.product_name}</td>
                            <td class="px-6 py-3 text-right font-mono font-bold ${isAdd ? 'text-emerald-600' : 'text-rose-600'}">${isAdd ? '+' : '-'}${log.quantity}</td>
                            <td class="px-6 py-3 text-slate-500">${log.actor_name}</td>
                        </tr>`;
                            }).join('');
                        }

                    } catch (e) { console.error(e); }
                }


                // --- Product Management ---
                let allProducts = [];
                let productPage = 1;
                const PRODUCT_PAGE_SIZE = 100;

                function loadProducts() {
                    const tbody = document.getElementById('productTableBody');
                    fetch('/api/admin/products').then(r => r.json()).then(products => {
                        allProducts = products;
                        productPage = 1;
                        renderProductTable();
                    }).catch(() => {
                        tbody.innerHTML = '<tr><td colspan="6" class="px-4 py-6 text-center text-rose-500">โหลดข้อมูลล้มเหลว</td></tr>';
                    });
                }

                function renderProductTable() {
                    const query = (document.getElementById('productSearchInput')?.value || '').toLowerCase().trim();
                    const filtered = query
                        ? allProducts.filter(p =>
                            p.product_name.toLowerCase().includes(query) ||
                            (p.category_name || '').toLowerCase().includes(query))
                        : allProducts;

                    const total = filtered.length;
                    const totalPages = Math.max(1, Math.ceil(total / PRODUCT_PAGE_SIZE));
                    if (productPage > totalPages) productPage = totalPages;

                    const start = (productPage - 1) * PRODUCT_PAGE_SIZE;
                    const pageItems = filtered.slice(start, start + PRODUCT_PAGE_SIZE);

                    // Update count label
                    document.getElementById('productCount').textContent =
                        query ? `(พบ ${total} / ${allProducts.length})` : `(${total} รายการ)`;

                    const tbody = document.getElementById('productTableBody');
                    if (!pageItems.length) {
                        tbody.innerHTML = '<tr><td colspan="6" class="px-4 py-6 text-center text-slate-400">ไม่พบสินค้าที่ตรงกับคำค้นหา</td></tr>';
                    } else {
                        tbody.innerHTML = pageItems.map(p => {
                            const encName = p.product_name.replace(/&/g, '&amp;').replace(/"/g, '&quot;');
                            const encImg = (p.image_url || '').replace(/&/g, '&amp;').replace(/"/g, '&quot;');
                            const encCat = (p.category_name || '').replace(/&/g, '&amp;').replace(/"/g, '&quot;');
                            const thumb = p.image_url
                                ? `<img src="${encImg}" class="w-9 h-9 rounded-lg object-cover border border-slate-100 bg-slate-50" onerror="this.style.display='none'">`
                                : `<div class="w-9 h-9 rounded-lg bg-slate-100 flex items-center justify-center text-slate-300"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg></div>`;
                            return `<tr class="hover:bg-slate-50 transition-colors"
                                        data-pid="${p.id}" data-name="${encName}" data-price="${p.price}"
                                        data-img="${encImg}" data-cat="${encCat}" data-shelf="${p.shelf_life_days}">
                                <td class="px-4 py-3 text-sm text-slate-400 font-mono">${p.id}</td>
                                <td class="px-4 py-3">
                                    <div class="flex items-center gap-3">${thumb}
                                        <span class="font-medium text-slate-800 text-sm">${p.product_name}</span>
                                    </div>
                                </td>
                                <td class="px-4 py-3 text-sm text-slate-500">${p.category_name || '—'}</td>
                                <td class="px-4 py-3 text-sm text-right font-mono">${p.price > 0 ? Number(p.price).toFixed(2) : '—'}</td>
                                <td class="px-4 py-3 text-sm text-right font-mono">${p.shelf_life_days}</td>
                                <td class="px-4 py-3 text-center">
                                    <div class="flex items-center justify-center gap-1">
                                        <button data-action="edit-product" class="text-blue-500 hover:bg-blue-50 p-2 rounded-lg transition-colors" title="แก้ไข">
                                            <svg class="w-4 h-4 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                        </button>
                                        <button data-action="delete-product" class="text-rose-500 hover:bg-rose-50 p-2 rounded-lg transition-colors" title="ลบ">
                                            <svg class="w-4 h-4 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                        </button>
                                    </div>
                                </td>
                            </tr>`;
                        }).join('');
                    }

                    // Render pagination
                    const pg = document.getElementById('productPagination');
                    if (totalPages <= 1) { pg.innerHTML = ''; return; }
                    const prevDis = productPage === 1 ? 'opacity-40 cursor-not-allowed pointer-events-none' : 'hover:bg-slate-100';
                    const nextDis = productPage === totalPages ? 'opacity-40 cursor-not-allowed pointer-events-none' : 'hover:bg-slate-100';
                    pg.innerHTML = `
                        <span>แสดง ${start + 1}–${Math.min(start + PRODUCT_PAGE_SIZE, total)} จาก ${total} รายการ</span>
                        <div class="flex gap-1">
                            <button id="productPrevBtn" class="px-3 py-1.5 rounded-lg border border-slate-200 text-sm ${prevDis}">ก่อนหน้า</button>
                            <span class="px-3 py-1.5 text-sm font-semibold text-emerald-700">${productPage} / ${totalPages}</span>
                            <button id="productNextBtn" class="px-3 py-1.5 rounded-lg border border-slate-200 text-sm ${nextDis}">ถัดไป</button>
                        </div>`;

                    document.getElementById('productPrevBtn')?.addEventListener('click', () => { productPage--; renderProductTable(); });
                    document.getElementById('productNextBtn')?.addEventListener('click', () => { productPage++; renderProductTable(); });
                }

                // Search input
                document.getElementById('productSearchInput').addEventListener('input', () => {
                    productPage = 1;
                    renderProductTable();
                });

                // Event delegation for product table buttons
                document.getElementById('productTableBody').addEventListener('click', (e) => {
                    const btn = e.target.closest('[data-action]');
                    if (!btn) return;
                    const row = btn.closest('tr');
                    const id = row.dataset.pid;
                    const name = row.dataset.name;
                    const price = row.dataset.price;
                    const imgUrl = row.dataset.img;
                    const category = row.dataset.cat;
                    const shelfLife = row.dataset.shelf;
                    if (btn.dataset.action === 'edit-product') {
                        openEditProduct(id, name, price, imgUrl, category, shelfLife);
                    } else if (btn.dataset.action === 'delete-product') {
                        deleteProduct(id, name);
                    }
                });


                function closeProductModal() {
                    document.getElementById('productModal').classList.add('hidden');
                    document.getElementById('productForm').reset();
                    document.getElementById('editProductId').value = '';
                }

                document.getElementById('btnCreateProduct').addEventListener('click', () => {
                    document.getElementById('productModalTitle').textContent = 'เพิ่มสินค้าใหม่';
                    document.getElementById('productForm').reset();
                    document.getElementById('editProductId').value = '';
                    document.getElementById('productShelfLife').value = 7;
                    document.getElementById('productModal').classList.remove('hidden');
                });

                window.openEditProduct = (id, name, price, imgUrl, category, shelfLife) => {
                    document.getElementById('productModalTitle').textContent = 'แก้ไขสินค้า';
                    document.getElementById('editProductId').value = id;
                    document.getElementById('productName').value = name;
                    document.getElementById('productPrice').value = price || '';
                    document.getElementById('productImageUrl').value = imgUrl || '';
                    document.getElementById('productCategory').value = category || '';
                    document.getElementById('productShelfLife').value = shelfLife || 7;
                    document.getElementById('productModal').classList.remove('hidden');
                };

                document.getElementById('productForm').addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const id = document.getElementById('editProductId').value;
                    const isEdit = !!id;
                    const payload = {
                        product_name: document.getElementById('productName').value.trim(),
                        price: document.getElementById('productPrice').value,
                        image_url: document.getElementById('productImageUrl').value.trim(),
                        category_name: document.getElementById('productCategory').value.trim(),
                        shelf_life_days: document.getElementById('productShelfLife').value
                    };
                    try {
                        const res = await fetch(isEdit ? `/api/admin/products/${id}` : '/api/admin/products', {
                            method: isEdit ? 'PUT' : 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });
                        const result = await res.json();
                        if (res.ok) {
                            Swal.fire('สำเร็จ!', isEdit ? 'แก้ไขสินค้าเรียบร้อย' : 'เพิ่มสินค้าใหม่เรียบร้อย', 'success');
                            closeProductModal();
                            loadProducts();
                        } else {
                            Swal.fire('ล้มเหลว', result.error, 'error');
                        }
                    } catch { Swal.fire('ข้อผิดพลาด', 'ระบบขัดข้อง', 'error'); }
                });

                window.deleteProduct = async (id, name) => {
                    const conf = await Swal.fire({
                        title: `ลบสินค้า?`,
                        text: `"${name}" จะถูกลบพร้อมสต็อกและประวัติทั้งหมด`,
                        icon: 'warning', showCancelButton: true,
                        confirmButtonColor: '#ef4444', cancelButtonColor: '#64748b',
                        confirmButtonText: 'ลบ', cancelButtonText: 'ยกเลิก'
                    });
                    if (!conf.isConfirmed) return;
                    const res = await fetch(`/api/admin/products/${id}`, { method: 'DELETE' });
                    if (res.ok) { loadProducts(); Swal.fire('ลบสำเร็จ!', '', 'success'); }
                    else { const d = await res.json(); Swal.fire('ลบล้มเหลว', d.error, 'error'); }
                };

                // --- User Management ---
                function loadUsers() {
                    const tableBody = document.getElementById('userTableBody');
                    fetch('/api/admin/users').then(r => r.json()).then(users => {
                        tableBody.innerHTML = users.map(u => {
                            const roleBadge = u.role === 'admin'
                                ? '<span class="px-2.5 py-1 rounded bg-indigo-100 text-indigo-800 text-xs font-semibold">Admin</span>'
                                : '<span class="px-2.5 py-1 rounded bg-slate-100 text-slate-700 text-xs font-semibold">User</span>';
                            const isSelf = u.username === AUTH_USER.username;
                            const actions = isSelf
                                ? '<span class="text-xs text-slate-400">(บัญชีของคุณ)</span>'
                                : `<div class="flex items-center justify-center gap-1">
                                    <button onclick="openEditUser(${u.id}, '${u.username}', '${u.role}')" class="text-blue-500 hover:bg-blue-50 p-2 rounded-lg transition-colors" title="แก้ไข"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg></button>
                                    <button onclick="deleteUser(${u.id}, '${u.username}')" class="text-rose-500 hover:bg-rose-50 p-2 rounded-lg transition-colors" title="ลบ"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg></button>
                                    </div>`;
                            return `<tr class="hover:bg-slate-50 transition-colors">
                        <td class="px-6 py-4 text-sm text-slate-500 font-mono">${u.id}</td>
                        <td class="px-6 py-4 font-medium text-slate-800">${u.username}</td>
                        <td class="px-6 py-4">${roleBadge}</td>
                        <td class="px-6 py-4 text-center">${actions}</td>
                    </tr>`;
                        }).join('');
                    });
                }

                document.getElementById('btnCreateUser').addEventListener('click', () => {
                    document.getElementById('createUserForm').reset();
                    document.getElementById('createUserModal').classList.remove('hidden');
                });

                document.getElementById('createUserForm').addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const username = document.getElementById('newUsername').value.trim();
                    const password = document.getElementById('newPassword').value;
                    const role = document.querySelector('input[name="newRole"]:checked').value;
                    try {
                        const res = await fetch('/api/admin/users', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ username, password, role })
                        });
                        const result = await res.json();
                        if (res.ok) {
                            Swal.fire('สำเร็จ!', 'สร้างบัญชีผู้ใช้เรียบร้อย', 'success');
                            document.getElementById('createUserModal').classList.add('hidden');
                            loadUsers();
                        } else {
                            Swal.fire('ล้มเหลว', result.error, 'error');
                        }
                    } catch { Swal.fire('ข้อผิดพลาด', 'ระบบขัดข้อง', 'error'); }
                });

                window.openEditUser = (id, username, role) => {
                    document.getElementById('editUserId').value = id;
                    document.getElementById('editUserUsername').value = username;
                    document.getElementById('editUserPassword').value = '';
                    const radioToCheck = document.querySelector(`input[name="editRole"][value="${role}"]`);
                    if (radioToCheck) radioToCheck.checked = true;
                    document.getElementById('editUserModal').classList.remove('hidden');
                };

                document.getElementById('editUserForm').addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const id = document.getElementById('editUserId').value;
                    const role = document.querySelector('input[name="editRole"]:checked').value;
                    const password = document.getElementById('editUserPassword').value;
                    const payload = { role };
                    if (password) payload.password = password;
                    try {
                        const res = await fetch(`/api/admin/users/${id}`, {
                            method: 'PUT',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(payload)
                        });
                        const result = await res.json();
                        if (res.ok) {
                            Swal.fire('สำเร็จ!', 'อัปเดตบัญชีเรียบร้อย', 'success');
                            document.getElementById('editUserModal').classList.add('hidden');
                            loadUsers();
                        } else {
                            Swal.fire('ล้มเหลว', result.error, 'error');
                        }
                    } catch { Swal.fire('ข้อผิดพลาด', 'ระบบขัดข้อง', 'error'); }
                });

                window.deleteUser = async (id, username) => {
                    const conf = await Swal.fire({
                        title: `ลบผู้ใช้ "${username}"?`,
                        icon: 'warning', showCancelButton: true,
                        confirmButtonColor: '#ef4444', cancelButtonColor: '#64748b',
                        confirmButtonText: 'ลบ', cancelButtonText: 'ยกเลิก'
                    });
                    if (!conf.isConfirmed) return;
                    const res = await fetch(`/api/admin/users/${id}`, { method: 'DELETE' });
                    if (res.ok) { loadUsers(); Swal.fire('ลบสำเร็จ!', '', 'success'); }
                    else { const d = await res.json(); Swal.fire('ลบล้มเหลว', d.error, 'error'); }
                };

                // --- Init ---
                document.addEventListener('DOMContentLoaded', () => {
                    loadStats();
                    loadProducts();
                    loadUsers();
                });
            </script>
    </body>

</html>